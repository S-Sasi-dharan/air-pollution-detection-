// include the library code for LCD shield:
#include <Wire.h> #include <Adafruit_MCP23017.h>
#include <Adafruit_RGBLCDShield.h>
// include code for temperature and humidity #include <dht.h>
//Setup Temperature and humidity #define dht_dpin 2 //chanel for temperature sensor dht DHT;
//Setup LCD
Adafruit RGBLCDShield lcd = Adafruit_RGBLCDShield();
// These #defines make it easy to set the backlight color
#define OFF 0x0
#define RED 0x1
#define YELLOW 0x3
#define GREEN 0x2
#define TEAL 0x6
#define BLUE 0x4
#define VIOLET 0x5
#define WHITE 0x7
